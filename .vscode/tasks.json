{
    "version": "2.0.0",
    "tasks": [


        {
            "type": "shell",
            "label": "build tests",
            "command": "ninja",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
			"group": "build",
            "dependsOn":[
                "cppcheck",
                "lizard"
            ]
        },

        {
            "type": "shell",
            "label": "cppcheck",
            "command": "ninja",
            "args": ["cppcheck"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
			"group": "build",
        },



        {
            "type": "shell",
            "label": "lizard",
            "command": "ninja",
            "args": ["complexity"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "severity": "warning",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4
                }
            },
			"group": "build",
        },



