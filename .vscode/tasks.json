{
    "version": "2.0.0",
    "tasks": [


        {
            "type": "shell",
            "label": "build tests",
            "command": "ninja",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },

            "problemMatcher": {
                "fileLocation": "absolute",
                "severity": "warning",
                "pattern": {
                    "regexp": "^(.*?):(\\d+?):(\\d+?:)?\\s+(warning|error|style|portability|performance):\\s+(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 4,
                    "message": 5
                }
            },
			"group": "build",
            "dependsOn":[
                // "cppcheck",
                "lizard",
                // "clang-tidy"
            ]
        },
        {
            "type": "shell",
            "label": "rebuild tests",
            "command": "ninja",
            "problemMatcher": [
                "$gcc"
            ],
			"group": "build",
            "dependsOn": ["clean", "build tests"],
            "dependsOrder": "sequence"

        },



        {
            "type": "shell",
            "label": "cppcheck",
            "command": "ninja",
            "args": ["cppcheck"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
			"group": "build",
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "ninja",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
			"group": "build",
        },



        {
            "type": "shell",
            "label": "clang-tidy",
            "command": "ninja",
            "args": ["tidy"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
			"group": "build",
        },



        {
            "type": "shell",
            "label": "lizard",
            "command": "ninja",
            "args": ["complexity-concise"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "severity": "warning",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4
                }
            },
			"group": "build",
        },


        {
            "type": "shell",
            "label": "tests",
            "command": "ctest",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "severity": "warning",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4
                }
            },
			"group": "build",
        },

        {
            "type": "shell",
            "label": "uinttests",
            "command": "./unittests",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build/tests/unittests"
            },
            "dependsOn": "build tests",
            "problemMatcher": {
                "fileLocation": "absolute",
                "severity": "warning",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4
                }
            },
			"group": "build",
        },




        {
            "type": "shell",
            "label": "coverage",
            "command": "ninja",
            "args": ["coverage-html"],
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "severity": "warning",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4
                }
            },
			"group": "build",
        },

        {
            "type": "shell",
            "label": "show coverage",
            "command": "xdg-open",
            "args": ["coverage/index.html"],
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "dependsOn":["coverage"],
            "problemMatcher": {
                "fileLocation": "absolute",
                "severity": "warning",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4
                }
            },
			"group": "build",
        },






